<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="508.0" prefWidth="762.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddRecipeMenuController">
    <children>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <ImageView fitHeight="508.0" fitWidth="762.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@AddRecipeMenu/healthy-vegetables-on-wooden-table.jpg" />
                    </image>
                </ImageView>
                <Label layoutX="14.0" layoutY="14.0" text="Add or Update a Recipe" textFill="#10eb14">
                    <font>
                        <Font name="Cambria Bold" size="36.0" />
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="63.0" style="-fx-background-color: white; -fx-opacity: 0.75;" text=" Recipe Name: " underline="true">
                    <font>
                        <Font name="Cambria" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="txtfieldName" focusTraversable="false" layoutX="145.0" layoutY="60.0" opacity="0.75" prefHeight="31.0" prefWidth="396.0" promptText="i.e. Chicken Pot Pie">
                    <font>
                        <Font name="Cambria" size="16.0" />
                    </font>
                </TextField>
                <Label layoutX="14.0" layoutY="103.0" style="-fx-background-color: white; -fx-opacity: 0.75;" text=" Ingredient: " underline="true">
                    <font>
                        <Font name="Cambria" size="20.0" />
                    </font>
                </Label>
                <Button focusTraversable="false" layoutX="661.0" layoutY="51.0" mnemonicParsing="false" onAction="#addRecipe" prefHeight="65.0" prefWidth="71.0">
                    <graphic>
                        <ImageView fitHeight="65.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@AddRecipeMenu/save.png" />
                            </image></ImageView>
                    </graphic>
                </Button>
                <Button focusTraversable="false" layoutX="661.0" layoutY="174.0" mnemonicParsing="false" onAction="#updateRecipe" prefHeight="65.0" prefWidth="71.0">
                    <graphic>
                        <ImageView fitHeight="65.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@AddRecipeMenu/update.png" />
                            </image></ImageView>
                    </graphic>
                </Button>
                <Button focusTraversable="false" layoutX="661.0" layoutY="300.0" mnemonicParsing="false" onAction="#searchRecipe" prefHeight="65.0" prefWidth="71.0">
                    <graphic>
                        <ImageView fitHeight="65.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                            <effect>
                                <Blend />
                            </effect>
                            <image>
                                <Image url="@AddRecipeMenu/search.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button focusTraversable="false" layoutX="661.0" layoutY="429.0" mnemonicParsing="false" onAction="#goToHomeMenu" prefHeight="65.0" prefWidth="71.0">
                    <graphic>
                        <ImageView fitHeight="65.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@AddRecipeMenu/home.jpg" />
                            </image>
                            <effect>
                                <Blend />
                            </effect>
                        </ImageView>
                    </graphic>
                </Button>
                <Label layoutX="298.0" layoutY="103.0" style="-fx-background-color: white; -fx-opacity: 0.75;" text=" Amount: " underline="true">
                    <font>
                        <Font name="Cambria" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="txtfieldIngredient" focusTraversable="false" layoutX="133.0" layoutY="100.0" opacity="0.75" prefHeight="31.0" prefWidth="149.0" promptText="Carrots">
                    <font>
                        <Font name="Cambria" size="16.0" />
                    </font>
                </TextField>
                <TextField fx:id="txtfieldQuantity" focusTraversable="false" layoutX="390.0" layoutY="100.0" opacity="0.75" prefHeight="31.0" prefWidth="149.0" promptText="2 cups">
                    <font>
                        <Font name="Cambria" size="16.0" />
                    </font>
                </TextField>
                <TableView fx:id="tableview" layoutX="14.0" layoutY="174.0" opacity="0.75" prefHeight="273.0" prefWidth="528.0">
                    <columns>
                        <TableColumn fx:id="colIngredient" onEditCommit="#changeIngredient" prefWidth="269.0" text="Ingredient Name" />
                        <TableColumn fx:id="colAmount" minWidth="0.0" onEditCommit="#changeAmount" prefWidth="258.0" text="Amount" />
                    </columns>
                </TableView>
                <Button layoutX="18.0" layoutY="137.0" mnemonicParsing="false" onAction="#buttonAdd" text="Add Ingredient" />
                <Button layoutX="17.0" layoutY="462.0" mnemonicParsing="false" onAction="#buttonDelete" text="Delete Selected" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
